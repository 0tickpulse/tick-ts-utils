{
    "type": "module",
    "name": "tick-ts-utils",
    "version": "1.3.2",
    "description": "Bunch of utilities I personally use for TypeScript.",
    "main": "out/index.js",
    "scripts": {
        "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern=src/",
        "build": "tsc -b",
        "watch": "tsc -b -w",
        "clean": "rm -rf out",
        "cleanWindows": "rmdir /s /q out",
        "typedoc": "npx typedoc --out docs ./src",
        "prettier": "npx prettier -w ./src"
    },
    "author": "0TickPulse",
    "license": "AGPL-3.0-or-later",
    "devDependencies": {
        "@types/jest": "^29.2.6",
        "eslint-plugin-tsdoc": "^0.2.17",
        "jest": "^29.3.1",
        "prettier": "^2.8.3",
        "ts-jest": "^29.0.5",
        "typedoc": "^0.23.24",
        "typescript": "^4.9.5"
    },
    "prettier": {
        "printWidth": 150,
        "tabWidth": 4,
        "trailingComma": "all"
    }
}
